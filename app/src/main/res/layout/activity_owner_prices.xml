<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ownerPrices" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/green">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/actionBarLogin"
                layout="@layout/actionbar"></include>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/actionBarLogin"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:text="@string/Haircut"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/textView2"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/textView2"
                android:hint="@string/price_hair"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="@string/Beard_Shave"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView4"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/textView4"
                android:hint="@string/price_hair"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="@string/Wax"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/textView9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView8"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/textView8"
                android:hint="@string/price_hair"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="@string/Hair_washing"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/textView11"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView10"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/textView10"
                android:hint="@string/price_hair"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView3"
                android:layout_toEndOf="@id/textView3"
                android:backgroundTint="@color/green"
                android:text="@string/update_button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView5"
                android:layout_toEndOf="@id/textView5"
                android:backgroundTint="@color/green"
                android:text="@string/update_button" />

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView9"
                android:layout_toEndOf="@id/textView9"
                android:backgroundTint="@color/green"
                android:text="@string/update_button" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView11"
                android:layout_toEndOf="@id/textView11"
                android:backgroundTint="@color/green"
                android:text="@string/update_button" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
