<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer_BarberDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/actionbar" android:id="@+id/action_barBarberDetails" > </include>

            <Button
                android:id="@+id/saloon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/action_barBarberDetails"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="50dp"
                android:background="@color/blue"
                android:text="saloon1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/saloon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/saloon1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:background="@color/blue"
                android:text="saloon2"
                android:textColor="#000000" />

            <Button
                android:id="@+id/saloon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/saloon2"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:background="@color/blue"
                android:text="saloon3"
                android:textColor="#000000" />

            <Button
                android:id="@+id/saloon4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/saloon3"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:background="@color/blue"
                android:text="saloon4"
                android:textColor="#000000" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>